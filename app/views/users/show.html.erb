<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr valign="middle">
      <td>
          <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-xs btn-default" %></div>
          &nbsp;&nbsp;&nbsp;<%= l(@first_day, format: :middle) %>&nbsp;&nbsp;&nbsp;時間管理表&nbsp;&nbsp;&nbsp;
          <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-xs btn-default" %></td>
      <td>指定勤務時間&nbsp;&nbsp;&nbsp;<%= format_basic_info(@user.work_time) %></td>
      <td colspan="3"><%= format_basic_info(@user.basic_time) %>&nbsp;&nbsp;&nbsp;基本時間</td>
      <td>初日&nbsp;&nbsp;&nbsp;<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属&nbsp;&nbsp;&nbsp;<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名&nbsp;&nbsp;&nbsp;<%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数&nbsp;&nbsp;&nbsp;<%= @worked_sum %>日</td>
      <td>締め&nbsp;&nbsp;&nbsp;<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div>
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), 
      class: "btn btn-md btn-default" %>
</div>

<div>
  <table class="table table-bordered table-condensed table-striped" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="2">日付</th>
        <th rowspan="2">曜日</th>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
      </tr>
      <tr>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
        <td></td>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td><%= l(day.started_at, format: :time_h) if day.started_at.present? %></td>
          <td><%= l(day.started_at, format: :time_m) if day.started_at.present? %></td>
          <td>
            <% if Date.current == day.worked_on && day.started_at.nil? %>
              <%= link_to "出社", user_attendance_path(@user, day), method: :patch, 
                  class: "btn btn-md btn-default btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.finished_at, format: :time_h) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at, format: :time_m) if day.finished_at.present? %></td>
          <td>
            <% if Date.current == day.worked_on && day.started_at.present? && day.finished_at.blank? %>
              <%= link_to "退社", user_attendance_path(@user, day), method: :patch, 
                  class: "btn btn-md btn-default btn-attendance" %>
            <% end %>
          </td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= day_work_time = worked_time(day.started_at, day.finished_at) %>
              <% @total_time = format("%.2f", @total_time.to_f + day_work_time.to_f)%>
            <% end %>
          </td>
          <td><%= day.note %></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <tr>
        <td colspan="2"></td>
        <td colspan="6"><%= format_basic_info(@user.basic_time).to_f * @worked_sum %></td>
        <td><%= @total_time %></td>
        <td></td>
      </tr>
    </tfoot>
  </table>
</div>