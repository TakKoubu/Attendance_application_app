<% provide(:title, "Password-reser") %>
<% provide(:user_label, "user--edit") %>
<h1>パスワード再設定</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: password_reset_path, method: :patch, local: true) do |f| %>    
      <%= render 'shared/error_messages', object: @user %>
    
      <%= f.label :password, 'パスワード', class: "label-password" %>
      <%= f.password_field :password, class: "form-control" %>
    
      <%= f.label :password_confirmation, 'パスワード再入力', class: "label-#{yield(:class_text)}" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      
      <%= f.submit '変更', class: "btn btn-primary btn-block btn-#{yield(:class_text)} mt-1" %>
    <% end %>
　</div>
</div>
