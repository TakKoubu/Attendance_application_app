<% provide(:title, "login") %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <%= f.label :uid, "職員コード", class: "label-login" %>
      <%= f.text_field :uid, class: "form-control" %>
      
      <%= f.label :password, "パスワード", class: "label-login" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.submit "Login", class: "btn btn-block btn-primary btn-login" %>
    <% end %>
    <p>
      ユーザー情報がまだの場合は<%= link_to "こちら", new_user_path %>
    </p>
  </div>
</div>