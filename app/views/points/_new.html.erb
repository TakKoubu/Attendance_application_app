<% provide(:button_text, '追加') %>
<% provide(:class_text, 'new-point') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">✖︎</span>
      </button>
      <h1 class="modal-title">拠点情報追加</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @point, local: true) do |f| %>
            <%= render 'shared/error_messages', object: @point %>

            <%= f.label :point_number %>
            <%= f.text_field :point_number, class: "form-control" %>

            <%= f.label :point_name %>
            <%= f.text_field :point_name, class: "form-control" %>

            <%= f.label :point_type %>
            <%= f.text_field :point_type, class: "form-control" %>

            <%= f.submit yield(:button_text), class: "btn btn-block btn-primary btn-#{yield(:class_text)}" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>